{
    "manifest_version": 3,
    "name": "Memento Mori Countdown",
    "version": "1.0",
    "description": "A countdown timer that reminds you of the limited time you have left on this planet.",
    "icons": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "permissions": [
      "storage"
    ],
    "action": {
      "default_popup": "popup.html"
    }
  }